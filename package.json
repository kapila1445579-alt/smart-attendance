{
  "name": "smart-attendance-tracker",
  "version": "1.0.0",
  "description": "Smart Attendance Tracker with facial recognition, NFC, and QR code verification",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "download-models": "node scripts/download-models.js"
  },
  "keywords": [
    "attendance",
    "facial-recognition",
    "nfc",
    "qr-code",
    "education"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "socket.io": "^4.6.1",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.0",
    "express-validator": "^7.0.1",
    "moment": "^2.29.4",
    "canvas": "^2.11.2",
    "face-api.js": "^0.22.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}

